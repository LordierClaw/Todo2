<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/allTaskFragment">

    <fragment
        android:id="@+id/allTaskFragment"
        android:name="me.lordierclaw.todo2.screen.task.alltask.AllTaskFragment"
        tools:layout="@layout/fragment_all_task">
        <action
            android:id="@+id/action_allTaskFragment_to_taskDetailFragment"
            app:destination="@id/taskDetailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/allTaskFragment" />
    </fragment>
    <fragment
        android:id="@+id/calendarFragment"
        android:name="me.lordierclaw.todo2.screen.calendar.CalendarFragment"
        tools:layout="@layout/fragment_calendar" />
    <fragment
        android:id="@+id/mineFragment"
        android:name="me.lordierclaw.todo2.screen.mine.MineFragment"
        tools:layout="@layout/fragment_mine" />
    <fragment
        android:id="@+id/taskDetailFragment"
        android:name="me.lordierclaw.todo2.screen.task.taskdetail.TaskDetailFragment"
        tools:layout="@layout/fragment_task_detail" />
</navigation>